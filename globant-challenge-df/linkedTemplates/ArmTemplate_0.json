						"precision": 0,
						"scale": 0
					},
					{
						"name": "datetime",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "department_id",
						"type": "int",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "job_id",
						"type": "int",
						"precision": 10,
						"scale": 0
